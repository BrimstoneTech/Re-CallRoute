<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#DDFFFFFF">

    <TextView
        android:id="@+id/callerIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming Call: +1 234 567 890"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/intentAnalysisText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent: 'I need help with payroll' (HR Match)"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatically routing to: HR Support (Ext. 202)"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/acceptCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accept"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/declineCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Decline"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/manualRedirect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manual Override / Redirect"
        android:layout_marginTop="16dp" />

</LinearLayout>
